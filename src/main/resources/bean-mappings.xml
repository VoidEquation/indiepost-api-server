<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping map-null="false">
        <class-a>com.indiepost.model.Post</class-a>
        <class-b>com.indiepost.model.response.AdminPostResponse</class-b>
        <field custom-converter-id="EnumStringConverter">
            <a>status</a>
            <b>status</b>
        </field>
        <field custom-converter-id="EnumStringConverter">
            <a>postType</a>
            <b>postType</b>
        </field>
        <field type="one-way">
            <a>author.id</a>
            <b>authorId</b>
        </field>
        <field type="one-way">
            <a>editor.id</a>
            <b>editorId</b>
        </field>
        <field type="one-way">
            <a>category.id</a>
            <b>categoryId</b>
        </field>
        <field type="one-way">
            <a>original.id</a>
            <b>originalId</b>
        </field>
        <field custom-converter-id="TagStringConverter">
            <a>tags</a>
            <b>tags</b>
        </field>
    </mapping>

    <mapping map-null="false" trim-strings="true">
        <class-a>com.indiepost.model.request.AdminPostRequest</class-a>
        <class-b>com.indiepost.model.Post</class-b>
        <field type="one-way">
            <a>originalId</a>
            <b>original.id</b>
        </field>
        <field custom-converter-id="EnumStringConverter">
            <a>status</a>
            <b>status</b>
        </field>
        <field type="one-way">
            <a>categoryId</a>
            <b>category.id</b>
        </field>
        <field custom-converter-id="TagStringConverter">
            <a>tags</a>
            <b>tags</b>
        </field>
    </mapping>
</mappings>